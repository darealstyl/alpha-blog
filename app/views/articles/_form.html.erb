<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @article %>
      <%= form_with(model: @article, class: "bg-info p-3 rounded shadow mb-3", local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title goes here..." %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :description, class: " col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg w-25" %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="row text-center">
    <%= link_to "[ Back to Articles ]",
    articles_path,
    method: :get,
    class: "text-info mb-3" %>
  </div>
</div>
