<h1>Showing article details</h1>
<%= link_to "Back to Articles", articles_path, method: :get %>
<p><strong>Title:
  </strong><%= @article.title %></p>
<p><strong>Description:
  </strong><%= @article.description %></p>
<table>
  <tr>
    <td><%= button_to "Edit", edit_article_path(@article), method: :get %>
    </td>
    <td><%= button_to "Delete",
      article_path(@article),
      method: :delete,
      form: {
        onsubmit: "return confirm('Are you sure?')",
      } %>
    </td>
  </tr>
</table>
