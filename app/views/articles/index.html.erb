<div class="container">
  <h1 class="text-center mt-4">Articles</h1>


  <div class="d-flex justify-content-center page_info mt-4">
      <%= page_entries_info @articles %>
    </div>
  <div class="d-flex justify-content-center mt-2">
    <%= will_paginate @articles, class: "apple_pagination" %>
  </div>
    <div class="row justify-content-center text-center mt-4">
    <div class="col-8">
      <%= button_to "Create New Article",
                    new_article_path,
                    method: :get,
                    class: "btn btn-light border-dark" %>
    </div>
  </div>
  <%= render "article" %>
  <div class="d-flex justify-content-center my-4">
    <%= will_paginate @articles, class: "apple_pagination" %>
  </div>
</div>
