<div style="padding: 10px">
    <h1>Articles</h1>

    <table style="padding: 5px">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title </th>
                <th>Description </th>
                <th colspan=3>Actions</th>
            </tr>
        </thead>
        
    
        <% @articles.each do |item| %>
            <tbody>
                <tr>
                    <td style="text-align: left"><%= item.id %></td>
                    <td style="text-align: left"><%= item.title %></td>
                    <td style="text-align: left"><%= item.description %></td>
                    <td><%= button_to "Show", article_path(item), method: :get %></td>
                    <td><%= button_to "Edit", edit_article_path(item), method: :get %></td>
                    <td><%= button_to "Delete",
                                      article_path(item),
                                      method: :delete,
                                      form: { onsubmit: "return confirm('Are you sure?')" } %></td>                
            </tr>
            </tbody> 
        <% end %>
    </table>
    <p>
        <%= button_to "Create Article", new_article_path, method: :get %>
    </p>
    <button class="btn btn-primary">Hello Bootstrap</button>

</div>
