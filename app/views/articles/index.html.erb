<div class="container">
  <h1 class="text-center mt-4">Articles</h1>

  <div class="row justify-content-center text-center mt-5">
    <div class="col-8">
      <%= button_to "Create New Article",
      new_article_path,
      method: :get,
      class: "btn btn-light border-dark" %>
    </div>
  </div>

  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-8 mt-4">

        <div class="card text-center shadow mb-5">
          <div class="card-header fst-italic">
            by
            <%= article.user.username if article.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title,
              article_path(article),
              method: :get,
              class: "text-success text-decoration-none" %></h5>
            <p class="card-text">
              <%= truncate(article.description, length: 100) %>
            </p>
            <div class="d-flex justify-content-center">
              <%= button_to "Show",
              article_path(article),
              method: :get,
              class: "btn btn-outline-success mx-1" %>
              <%= button_to "Edit",
              edit_article_path(article),
              method: :get,
              class: "btn btn-outline-primary mx-1" %>
              <%= button_to "Delete",
              article_path(article),
              method: :delete,
              form: {
                onsubmit: "return confirm('Are you sure?')",
              },
              class: "btn btn-outline-danger mx-1" %>
            </div>
          </div>
          <div class="card-footer text-body-secondary">
            <small>
              Created
              <%= time_ago_in_words(article.created_at) %>
              ago, Edited
              <%= time_ago_in_words(article.updated_at) %>
              ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
