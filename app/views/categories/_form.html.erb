<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "bg-info p-3 rounded shadow mb-3", local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :name,
                             class: "form-control",
                             placeholder: "Name goes here..." %>
          </div>
        </div>

        <div class="form-group row mb-3 justify-content-center">
          <%= f.submit(class: "btn btn-outline-light btn-lg w-50 text-wrap") %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="row text-center">
  <% if @category.id != nil %>
  <%= link_to "[ Back to Category ]",
              category_path(@category),
              method: :get,
              class: "text-info mb-3" %>
                <% else %>
    <%= link_to "[ Back to Articles ]",
                articles_path,
                method: :get,
                class: "text-info mb-3" %>
                <% end %>
  </div>
</div>
