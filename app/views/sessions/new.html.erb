<h1 class="text-center mt-4">Login</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "bg-info p-3 rounded shadow mb-3", local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", placeholder: "example@gmail.com" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control", placeholder: "************" %>
          </div>
        </div>

        <div class="form-group row mb-3 justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg w-50" %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="row text-center">
    <%= link_to "[ Back to Articles ]",
                articles_path,
                method: :get,
                class: "text-info mb-3" %>
  </div>
</div>
