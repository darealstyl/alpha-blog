<div class="container justify-content-center text-center">
  <h2 class="text-center mt-4"><%= @user.username %>'s profile</h2>
  <%= gravatar_for @user, size: 200 %>
  <%= link_to "Edit Your Profile", edit_user_path, class: "btn btn-lg btn-outline-dark mt-4" %>

<div class="d-flex justify-content-center page_info mt-4">
      <%= page_entries_info @articles %>
    </div>
  <div class="d-flex justify-content-center mt-2">
    <%= will_paginate @articles, class: "apple_pagination" %>
  </div>
  <h3 class="text-center mt-4">Articles</h3>
  <%= render "articles/article" %>
  <div class="d-flex justify-content-center mt-2">
    <%= will_paginate @articles, class: "apple_pagination" %>
  </div>
  <div class="row justify-content-center text-center">
    <div class="col-8 mt-4">

    </div>
    <%= link_to "[ Back to Bloggers ]", users_path, method: :get, class: "text-info mb-4" %>
  </div>
</div>

